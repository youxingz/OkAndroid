<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_pane"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_margin="16dp"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蠕动泵"
        android:paddingBottom="6dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前速度"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/velocity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="0 RPM"
            android:textColor="@color/black" />

        <ToggleButton
            android:id="@+id/btn_velocity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textOff="点击读取"
            android:textOn="正在读取" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置速度"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/velocity_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:digits="0123456789"
            android:text="600"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RPM"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_velocity_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="设置" />
    </LinearLayout>

    <Switch
        android:id="@+id/direction_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="60dp"
        android:text="方向设置     " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（开启为正，关闭为逆）"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启停       "
            android:textColor="@color/black" />

        <ToggleButton
            android:id="@+id/turn_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="已停止"
            android:textOn="已启动" />

        <!--            <ToggleButton-->
        <!--                android:id="@+id/turn_on_btn"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:textOff="已关闭持续"-->
        <!--                android:textOn="已持续启动" />-->
    </LinearLayout>

</LinearLayout>